<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.client.controllers.showEmailController">
   <children>
      <ToolBar>
        <items>
          <Button fx:id="replyButton" mnemonicParsing="false" onAction="#reply" text="Reply" />
            <Button fx:id="forwardButton" mnemonicParsing="false" onAction="#forward" text="Forward" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#delete" text="Delete" />
        </items>
      </ToolBar>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="285.0" minWidth="10.0" prefWidth="36.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="544.0" minWidth="10.0" prefWidth="544.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="From:">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin></Label>
            <TextField fx:id="sender" disable="true" editable="false" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <TextField fx:id="subject" disable="true" editable="false" />
      <TextArea fx:id="body" disable="true" editable="false" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
