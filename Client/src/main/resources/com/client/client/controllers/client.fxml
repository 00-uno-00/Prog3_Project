<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?xml-stylesheet type="text/css" href="style.css"?>

<VBox id="window" fx:id="window" prefHeight="600.0" prefWidth="900.0" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.client.controllers.ClientController">
   <children>
      <SplitPane dividerPositions="0.2, 0.5, 0.75" VBox.vgrow="ALWAYS">
         <items>
            <ListView fx:id="subjectList" fixedCellSize="25" prefHeight="578.0" prefWidth="696.0" />
            <ListView fx:id="senderList" fixedCellSize="25" prefHeight="578.0" prefWidth="0.0" />
            <ListView fx:id="bodyList" fixedCellSize="25" prefHeight="200.0" prefWidth="200.0" />
            <AnchorPane>
               <children>
                  <Button fx:id="changeAccount" layoutY="2.0" mnemonicParsing="false" onAction="#changeAccount" prefHeight="25.0" prefWidth="266.0" text="Change Account" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  <Button fx:id="refresh" layoutX="8.0" layoutY="25.0" mnemonicParsing="false" onAction="#refresh" prefHeight="25.0" prefWidth="204.0" text="Receive All" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0" />
                  <Button fx:id="newEmailButton" layoutX="82.0" layoutY="50.0" mnemonicParsing="false" text="New Email" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0" />
                  <ListView id="contactsList" fx:id="contactsList" layoutY="50.0" prefHeight="528.0" prefWidth="216.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="75.0" />
               </children>
            </AnchorPane>
         </items>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </SplitPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
